#include <stdio.h>
int main ()
{
      int h,b;
      float z;

    printf("enter the value of base \n");
    scanf ("%d",&b);
    printf ("enter the value of height \n");
    scanf("%d",&h);
    z = 0.5*b*h; 
    printf("%f",z);
    
    return 0; 
}



write a programe to calculate the area of the triangle?

#include <stdio.h>
#include  <math.h>
int main()
{
    int s,a,b,c,area;
printf("enter the values of a");
scanf("%d",&a);
printf("enter the values of b");
scanf("%d",&b);
printf("enter the values of c");
scanf("%d",&c);
s=(a+b+c)/2;
area=sqrt(s*(s-a)*(s-b)*(s-c));
printf("enter the values of triangle=%d\n",area);

    return 0;
}
